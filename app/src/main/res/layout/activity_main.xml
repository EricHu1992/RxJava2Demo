            android:layout_height="wrap_content"
            android:text="rx demo flatMap" />

        <Button
            android:id="@+id/demoConcatMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rx demo concatMap" />

        <Button
            android:id="@+id/demoZip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
